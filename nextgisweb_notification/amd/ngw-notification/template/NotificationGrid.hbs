<div data-dojo-type="${baseClass}">

    <div data-dojo-attach-point="gridPane" data-dojo-type="dijit/layout/ContentPane"
        data-dojo-props="region: 'center'" style="padding: 0; margin-right: 1px;">
    </div>

    <div data-dojo-attach-point="toolbar" data-dojo-type="dijit/Toolbar"
        data-dojo-props="region: 'top'"
        style="margin-right: 1px;">

        <div data-dojo-attach-point="btnCreateSubscribe"
             data-dojo-type="dijit/form/Button"
             data-dojo-props="iconClass: 'material-icons material-icons-enable'"
             label="{{gettext 'Create'}}">
        </div>

        <div data-dojo-attach-point="btnDeleteSubscribe"
             data-dojo-type="dijit/form/Button"
            data-dojo-props="iconClass: 'material-icons material-icons-enable'"
            label="{{gettext 'Delete'}}">
        </div>

    </div>

</div>
